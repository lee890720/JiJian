@model JJNG.Data.Branch.BrhImprestAccounts

@{
    Layout = "_CreateEditLayout";
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var areaName = ViewContext.RouteData.Values["area"].ToString();
    ViewData["action"] = actionName;
    ViewData["controller"] = controllerName;
    ViewData["area"] = areaName;
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@if (ViewData["action"].ToString() == "Create")
{ }
else
{
    <input type="hidden" asp-for="ImprestAccountsId" />
}
<div class="col-md-12">
    <div class="form-group">
        <label asp-for="ImprestAccountsName" class="control-label"></label>
        <input asp-for="ImprestAccountsName" class="form-control" />
        <span asp-validation-for="ImprestAccountsName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Manager" class="control-label"></label>
        <input asp-for="Manager" class="form-control" />
        <span asp-validation-for="Manager" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department" class="control-label"></label>
        @Html.DropDownList("Department", ViewData["Department"] as SelectList, "请选择", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="BelongTo" class="control-label"></label>
        @Html.DropDownList("BelongTo", ViewData["BelongTo"] as SelectList, "请选择", new { @class = "form-control" })
    </div>
</div>




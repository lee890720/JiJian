@model JJNG.Data.Finance.FncMonthData

@{
    Layout = "_CreateEditLayout";
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var areaName = ViewContext.RouteData.Values["area"].ToString();
    ViewData["action"] = actionName;
    ViewData["controller"] = controllerName;
    ViewData["area"] = areaName;
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@if (ViewData["action"].ToString() == "Create")
{
    <div class="form-group">
        <input type="hidden" asp-for="BranchId" value="@ViewData["BranchId"]" class="form-control" />
    </div>
}
else
{
    <input type="hidden" asp-for="MonthDataId" />
    <input type="hidden" asp-for="BranchId" />
}
<div class="col-md-12">
    <div class="form-group">
        <label asp-for="Month" class="control-label"></label>
        <input asp-for="Month" type="text" class="form-control  datepicker" />
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseAmount" class="control-label"></label>
        <input asp-for="HouseAmount" class="form-control" />
        <span asp-validation-for="HouseAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseTotal" class="control-label"></label>
        <input asp-for="HouseTotal" class="form-control" />
        <span asp-validation-for="HouseTotal" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseCount" class="control-label"></label>
        <input asp-for="HouseCount" class="form-control" />
        <span asp-validation-for="HouseCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Earning" class="control-label"></label>
        <input asp-for="Earning" class="form-control" />
        <span asp-validation-for="Earning" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Expend" class="control-label"></label>
        <input asp-for="Expend" class="form-control" />
        <span asp-validation-for="Expend" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SaleAmount" class="control-label"></label>
        <input asp-for="SaleAmount" class="form-control" />
        <span asp-validation-for="SaleAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SaleProfit" class="control-label"></label>
        <input asp-for="SaleProfit" class="form-control" />
        <span asp-validation-for="SaleProfit" class="text-danger"></span>
    </div>
</div>

@Html.Partial("_ValidationScriptsPartial")

<script>
    $(".datepicker").datepicker({
        format: 'yyyy-mm-dd',
        autoclose: true,
        language: "zh-CN",
        todayBtn: 'linked',
        todayHighlight: true,
    });
</script>

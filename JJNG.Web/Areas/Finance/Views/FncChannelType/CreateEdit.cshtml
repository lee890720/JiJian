@model JJNG.Data.Finance.FncChannelType
<link href="~/lib/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css" rel="stylesheet" />
@{
    Layout = "_CreateEditLayout";
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var areaName = ViewContext.RouteData.Values["area"].ToString();
    ViewData["action"] = actionName;
    ViewData["controller"] = controllerName;
    ViewData["area"] = areaName;
}
<div class="col-md-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewData["action"].ToString() == "Create")
    { }
    else
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="form-group">
        <label asp-for="ChannelType" class="control-label"></label>
        <input asp-for="ChannelType" class="form-control" />
        <span asp-validation-for="ChannelType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sequence" class="control-label"></label>
        <input asp-for="Sequence" class="form-control" />
        <span asp-validation-for="Sequence" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <div id="cp2" class="input-group colorpicker-component">
            <input asp-for="Color" class="form-control" />
            <span class="input-group-addon"><i></i></span>
        </div>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
</div>

<script src="~/lib/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.js"></script>
<script>
    $(function () {
        $('#cp2').colorpicker();
    });
</script>
